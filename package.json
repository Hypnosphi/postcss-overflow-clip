{
  "name": "postcss-overflow-clip",
  "version": "0.2.2",
  "description": "PostCSS plugin that adds `overvlow: clip` whenever `overflow: hidden` is used and vice versa",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "overflow"
  ],
  "scripts": {
    "test": "jest --coverage && eslint ."
  },
  "author": "Filipp Riabchun <filipp.riabchun@jetbrains.com>",
  "license": "MIT",
  "repository": "Hypnosphi/postcss-overflow-clip",
  "engines": {
    "node": ">=14.0.0"
  },
  "peerDependencies": {
    "postcss": "^8.2.8"
  },
  "devDependencies": {
    "clean-publish": "^4.1.1",
    "eslint": "^8.32.0",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "postcss": "^8.4.21",
    "simple-git-hooks": "^2.8.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "rules": {
      "jest/expect-expect": "off"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  }
}
